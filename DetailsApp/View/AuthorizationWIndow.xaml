<Window x:Class="DetailsApp.View.AuthorizationWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DetailsApp.View"
        mc:Ignorable="d"
        Title="AuthorizationWIndow" Height="250" Width="300">
    <Grid>
        <StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="textBoxLogin" Text=""/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="textBoxPassword" Text=""/>
            <Button x:Name="buttonSignIn" Content="Войти" Click="buttonSignIn_Click"/>
        </StackPanel>
    </Grid>
</Window>
